@using MudBlazor

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    :root {
        --dominant-color: #D8C99B;
        --secondary-color: #273E47;
        --accent-color: #D8973C;
    }
    
    body {
        background-color: var(--dominant-color);
    }
    
    /* Mobile Navigation Styles */
    .mobile-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1050;
        background-color: var(--secondary-color);
        border-bottom: 2px solid var(--accent-color);
    }
    
    .hamburger-btn {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: white;
        padding: 0.5rem;
    }
    
    .mobile-nav-dropdown {
        background-color: var(--secondary-color);
        border-top: 1px solid rgba(255,255,255,0.1);
    }
    
    .mobile-nav-item {
        display: block;
        padding: 1rem 1.5rem;
        color: white;
        text-decoration: none;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        transition: all 0.3s ease;
    }
    
    .mobile-nav-item:hover {
        background-color: var(--accent-color);
        color: white;
        text-decoration: none;
    }
    
    .mobile-nav-item i {
        width: 20px;
        margin-right: 0.75rem;
    }
    
    /* Desktop Layout */
    .page {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        width: 250px;
        overflow-y: auto;
        z-index: 1000;
    }
    
    main {
        flex: 1;
        margin-left: 0;
        padding-top: 0;
    }
    
    .content {
        padding: 1rem;
        padding-left: 1rem;
    }
    
    /* Mobile Responsive */
    @@media (max-width: 991px) {
        .mobile-nav {
            display: block;
        }
        
        .sidebar {
            display: none;
        }
        
        main {
            margin-left: 0;
            padding-top: 70px;
        }
        
        .content {
            padding: 0.5rem;
        }
    }
    
    @@media (min-width: 992px) {
        .mobile-nav {
            display: none;
        }
    }
</style>

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- Mobile Navigation (only visible on mobile) -->
<nav class="mobile-nav d-lg-none">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center py-2">
            <div class="d-flex align-items-center">
                <button class="hamburger-btn me-3" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNavDropdown" aria-expanded="false" aria-controls="mobileNavDropdown">
                    <i class="bi bi-list"></i>
                </button>
                <h5 class="mb-0 text-white fw-bold">Bin Flow</h5>
            </div>
            <div class="text-white">
                <small>@DateTime.Now.ToString("HH:mm")</small>
            </div>
        </div>
        
        <div class="collapse" id="mobileNavDropdown">
            <div class="mobile-nav-dropdown">
                <a href="/" class="mobile-nav-item">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Home</span>
                </a>
                <a href="/hourly-entry" class="mobile-nav-item">
                    <i class="bi bi-clock-history"></i>
                    <span>Hourly Entry</span>
                </a>
                <a href="/reports" class="mobile-nav-item">
                    <i class="bi bi-clipboard-data"></i>
                    <span>Shift Reports</span>
                </a>
                <a href="/dashboard" class="mobile-nav-item">
                    <i class="bi bi-bar-chart-line-fill"></i>
                    <span>Dashboard</span>
                </a>
                <div class="p-3 border-top border-secondary">
                    <small class="text-light opacity-75">
                        <i class="bi bi-circle-fill text-success me-2"></i>
                        System Online • @DateTime.Now.ToString("dd/MM/yyyy")
                    </small>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    [Parameter] public RenderFragment Body { get; set; } = default!;
}